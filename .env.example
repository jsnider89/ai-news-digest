# AI News Digest Configuration

# Server Settings
PORT=8000
HOST=0.0.0.0

# Application Settings
APP_NAME="AI News Digest"
ENVIRONMENT="production"
DATABASE_URL="sqlite+aiosqlite:///data/app.db"
DEFAULT_TIMEZONE="America/New_York"

# Data Storage
DATA_DIR="/data"

# AI Provider Settings (at least one required)
AI_PROVIDER_ORDER="openai,gemini,anthropic"

# OpenAI Configuration (recommended - supports verbosity levels)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Gemini Configuration (optional backup)
GEMINI_API_KEY="your-gemini-api-key-here"

# Anthropic Configuration (optional backup)
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Email Settings (choose ONE option below)

# Option 1: Resend (recommended - simple API)
RESEND_API_KEY="re_your-resend-api-key-here"
RESEND_FROM_EMAIL="newsletters@yourdomain.com"
RESEND_FROM_NAME="News Digest"

# Option 2: SMTP (Gmail, Outlook, corporate email, etc.)
# Uncomment and configure these if using SMTP instead of Resend:
# EMAIL_BACKEND="smtp"
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USERNAME="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_USE_TLS=true
# SMTP_FROM_EMAIL="your-email@gmail.com"
# SMTP_FROM_NAME="News Digest"

# Common SMTP providers:
# Gmail: smtp.gmail.com:587 (use app password, not regular password)
# Outlook: smtp-mail.outlook.com:587
# Yahoo: smtp.mail.yahoo.com:587
# Custom: your-mail-server.com:587

# Default Newsletter Settings
DEFAULT_SEND_TIMES="08:00,16:00"
DEFAULT_RECIPIENTS="admin@yourdomain.com"

# AI Model Configuration
PRIMARY_MODEL="gpt-5-mini"
SECONDARY_MODEL="gemini-2.5-flash"
REASONING_LEVEL="medium"

# Newsletter Scheduling (optional - can be configured in UI)
# MAX_CONCURRENT_FEEDS=5
# REQUEST_TIMEOUT=30.0
# MAX_ARTICLES_PER_FEED=10

# Security Settings (optional)
# ALLOWED_HOSTS="localhost,127.0.0.1,yourdomain.com"

# Logging Configuration
LOG_LEVEL="INFO"

# Performance Settings
# WORKER_COUNT=1
# MAX_MEMORY_MB=512